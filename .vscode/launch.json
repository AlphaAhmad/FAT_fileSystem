{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C program",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/file_system",  // Path to the compiled executable
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",  // Path to GDB
            "preLaunchTask": "C/C++: gcc build active file",  // Use the task defined in tasks.json
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
